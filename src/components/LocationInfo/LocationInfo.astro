---
import MapaIglesia from "@/components/MapaIglesia.astro";
import "./LocationInfo.css"
---

<section class="visit">
      <h2>Ubicación y horarios</h2>

      <div class="schedule-container">
        <div class="schedule-card">
          <h3>📖 Escuela dominical</h3>
          <p>Domingo · 9:00 am</p>
        </div>
        <div class="schedule-card">
          <h3>🙌 Culto de adoración</h3>
          <p>Domingo · 10:45 am</p>
        </div>
        <div class="schedule-card">
          <h3>🙏 Culto de oración</h3>
          <p>Miércoles · 4:00 pm</p>
        </div>
      </div>

      <div class="map-container">
        <iframe
          title="Ubicación de la iglesia"
          class="informacion-general__google-maps"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15702.103888301663!2d-75.44640921366003!3d10.299725108943846!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8ef6274cdf45953f%3A0x1b3cc25a743c46ed!2sFinca%20El%20Nido!5e0!3m2!1ses!2sco!4v1741015974796!5m2!1ses!2sco"
          width="100%"
          height="300"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </section>