---
import "@/styles/global.css";
import Header from "@/sections/Header/Header.astro";
import Footer from "@/sections/Footer/Footer.astro";
// import { ClientRouter } from "astro:transitions";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Iglesia Nido de Gracia", description = "Nido de Gracia es una iglesia cristiana que comparte el mensaje de fe, esperanza y amor en Jesucristo. Descubre qui√©nes somos y lo que creemos." } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/img/logo2.png">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nidodegracia.org" />
    <meta property="og:title" content="Iglesia Bautista Reformada Nido de Gracia" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://metatags.io/images/meta-tags.png" />

    <!-- X (Twitter) -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://nidodegracia.org" />
    <meta property="twitter:title" content="Iglesia Bautista Reformada Nido de Gracia" />
    <meta property="twitter:description" content={description} />
	</head>
	<body>
		<Header />
		<slot />
    <Footer />
	</body>
  </html>
  
  <script src="../utils/mobile-menu.ts"></script>